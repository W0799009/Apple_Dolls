@model Apple_Dolls.Models.DollMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Dolls" asp-action="Index">
    <p>
        Material:
        <select asp-for="DollMaterial" asp-items="Model.Materials">
            <option value="">All</option>
        </select>
        Name:
        <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].Doll_Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].SetTheme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].AgeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dolls[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dolls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doll_Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SetTheme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
